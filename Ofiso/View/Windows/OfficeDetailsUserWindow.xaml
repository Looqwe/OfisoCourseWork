<Window x:Class="Ofiso.View.Windows.OfficeDetailsUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ofiso.View.Windows"
        Title="Изменить детали офиса" 
        Height="600" 
        Width="1200"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0 5 0 10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Изображение с кнопкой изменения -->
        <Grid Grid.Column="0">
            <Image Source="{Binding Photo}"
                   Stretch="UniformToFill"
                   Margin="0 0 20 0"
                   x:Name="ImageControl"/>
        </Grid>

        <!-- Детали -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Заголовок:"/>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="16"/>

            <TextBlock Text="Адрес:"/>
            <TextBox Text="{Binding Address}"
                     FontSize="14"/>

            <TextBlock Text="Этаж:"/>
            <TextBox Text="{Binding Floor}"/>

            <TextBlock Text="Описание:"/>
            <TextBox Text="{Binding Description}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Height="60"/>

            <TextBlock Text="Цена за месяц (руб):"/>
            <TextBox Text="{Binding PricePerMont}"/>

            <TextBlock Text="Дата создания:"
                       Margin="0 10 0 0"/>
        </StackPanel>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">
            <Button Content="Удалить" 
                    Background="LightGray"
                    Foreground="White"
                    Click="DeleteButton_Click"
                    Name="DeleteButton"/>

            <Button Content="Сохранить" 
                    Background="#778DA9"
                    Foreground="White"
                    Click="SaveButton_Click"
                    Name="SaveButton"/>
            <Button Content="Изменить фото" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="#778DA9"
                    Click="ChangePhotoButton_Click"
                    Name="ChangePhotoButton"/>
        </StackPanel>
    </Grid>
</Window>
