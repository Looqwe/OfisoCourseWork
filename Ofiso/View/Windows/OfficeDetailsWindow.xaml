<Window x:Class="Ofiso.View.Windows.OfficeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ofiso.View.Windows"
        mc:Ignorable="d"
        Title="Детали офиса" 
        Height="600" 
        Width="1200"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Изображение -->
        <Image Source="{Binding Photo}"
               Grid.Column="0"
               Stretch="UniformToFill"
               Margin="0 0 20 0"/>

        <!-- Детали -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding Title}"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0 0 0 10"/>

            <TextBlock Text="{Binding Address}"
                       FontSize="16"
                       Foreground="#666666"/>

            <TextBlock Text="{Binding Floor, StringFormat='Этаж: {0}'}"
                       Margin="0 10 0 0"/>

            <TextBlock Text="{Binding Description}"
                       Margin="0 20 0 0"
                       TextWrapping="Wrap"/>

            <TextBlock Text="{Binding PricePerMont, StringFormat='Цена: {0:N0} руб/мес'}"
                       Margin="0 20 0 0"
                       FontWeight="Bold"/>

            <TextBlock Text="{Binding CreatedDate, StringFormat='Дата создания: {0:dd.MM.yyyy}'}"
                       Margin="0 10 0 0"/>
            <Border Margin="0 20 0 0"
             Padding="15"
             Background="#F5F5F5"
             CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Контактная информация"
                   FontWeight="Bold"
                   Margin="0 0 0 10"/>

                    <TextBlock Text="{Binding Users.Fname}"
                   FontSize="14"/>

                    <TextBlock Text="{Binding Users.NumberPhone}"
                   Margin="0 5 0 0"
                   Foreground="#666666"/>

                    <TextBlock Text="{Binding Users.Email}"
                   Margin="0 5 0 0"
                   Foreground="#666666"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
