<Window x:Class="Ofiso.View.Windows.AddOfficeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить объявление" Height="620" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">

        <TextBlock Text="Заголовок*"/>
        <TextBox Name="TitleTb" Margin="0 5"/>

        <TextBlock Text="Адрес*" Margin="0 10 0 0"/>
        <TextBox Name="AddressTb" Margin="0 5"/>

        <TextBlock Text="Этаж" Margin="0 10 0 0"/>
        <TextBox Name="FloorTb" Margin="0 5"/>

        <TextBlock Text="Описание" Margin="0 10 0 0"/>
        <TextBox Name="DescriptionTb" Margin="0 5" Height="80" TextWrapping="Wrap"/>

        <TextBlock Text="Цена за месяц*" Margin="0 10 0 0"/>
        <TextBox Name="PriceTb" Margin="0 5" Height="30"/>

        <TextBlock Text="Путь к фото" Margin="0 10 0 0"/>
        <TextBox Name="PhotoTb" Margin="0 5" Height="30"/>

        <Button Content="Добавить"  Height="60" Click="Button_Click" Margin="0 20" Padding="5 5"/>
        
    </StackPanel>
</Window>
