<Window x:Class="Ofiso.View.Windows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ofiso.View.Windows"
        mc:Ignorable="d"
        Title="Смена пароля" Height="300" Width="400">
    <Border Margin="20" Padding="25">
        <StackPanel>
            <TextBlock Text="Смена пароля"/>

            <PasswordBox x:Name="OldPasswordBox"
                       Tag="Старый пароль" 
                       Margin="0 15 0 0"/>

            <PasswordBox x:Name="NewPasswordBox"
                       Tag="Новый пароль"
                       Margin="0 10 0 20"/>

            <Button Content="Сохранить"
                    Name="SaveButton"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Border>
</Window>
