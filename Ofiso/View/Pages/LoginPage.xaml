<Page x:Class="Ofiso.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ofiso.View.Pages"
      mc:Ignorable="d" d:DesignHeight="460" d:DesignWidth="960"
      Title="Войти">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Войти" Grid.Row="1" Grid.Column="1" FontWeight="Bold"
                   FontSize="45" HorizontalAlignment="Center"/>

        <TextBox Name="PhoneTb" FontSize="25" Grid.Row="3" Grid.Column="1"/>

        <PasswordBox Name="PasswordPb" FontSize="25" Grid.Row="5" Grid.Column="1"/>

        <TextBlock Grid.Row="3" Text="Телефон" FontSize="25" HorizontalAlignment="Right" Padding="10"/>
        <TextBlock Grid.Row="5" Text="Пароль" FontSize="25" HorizontalAlignment="Right" Padding="10"/>

        <Button Height="60" FontWeight="Bold" Content="Войти" 
        Foreground="White"  Background="#778DA9"
                     Grid.Row="7" Grid.Column="1" 
                Click="Button_Click"/>




    </Grid>
</Page>
