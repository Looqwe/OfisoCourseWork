<Page x:Class="Ofiso.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ofiso.View.Pages"
      mc:Ignorable="d" 
      MinWidth="960" MaxWidth="960" MinHeight="560" MaxHeight="560"
      Title="Main" >
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Поисковая строка -->
            <Grid Grid.Row="0" Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SearchTextBox" 
                     Grid.Column="0"
                     Padding="15"
                     FontSize="16"
                     Background="White"
                     BorderBrush="#778DA9"
                     BorderThickness="2"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchTextBox_TextChanged"/>

                <Button Grid.Column="1" 
                    Content="Найти" 
                    Margin="10 0 0 0"
                    Padding="20 10"
                    Background="#778DA9"
                    Foreground="White"
                    FontWeight="Bold"
                    Name="SearchButton"
                    Click="SearchButton_Click"/>
            </Grid>

            <!-- Фильтры -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 20">
                <ComboBox Name="TypeFilterComboBox" Margin="0 0 10 0"
                     Width="200"
                     Padding="10"
                     SelectedIndex="0"
                     Background="White"
                     BorderBrush="#778DA9">
                    <ComboBoxItem Content="Все типы"/>
                    <ComboBoxItem Content="Открытые офисы"/>
                    <ComboBoxItem Content="Кабинеты"/>
                    <ComboBoxItem Content="Конференц-залы"/>
                </ComboBox>

                <Slider Name="PriceSlider" Width="200" 
                    Margin="0 0 10 0"
                    Minimum="0" 
                    Maximum="100000" 
                    TickFrequency="1000"
                    Value="50000"
                    Thumb.DragCompleted="PriceSlider_DragCompleted"/>

                <TextBlock Name="PriceText" Text="До 50 000 руб/мес" 
                      VerticalAlignment="Center"
                      Margin="0 0 20 0"/>

                <Button Content="Сбросить фильтры"
                    Background="Transparent"
                    Foreground="#778DA9"
                    BorderBrush="#778DA9"
                    BorderThickness="1"
                    Padding="15 5"
                    Name="ResetFilter"
                    Click="ResetFilter_Click"/>
            </StackPanel>

            <!-- Список офисов -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="OfficesList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                               Margin="0 0 0 15"
                               Padding="20"
                               CornerRadius="10"
                               BorderBrush="#E0E0E0"
                               BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{Binding ImageUrl}"
                                      Stretch="UniformToFill"
                                      Height="150"
                                      Width="200"/>

                                    <StackPanel Grid.Column="1" Margin="20 0">
                                        <TextBlock Text="{Binding Title}"
                                              FontSize="20"
                                              FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Address}"
                                              Margin="0 5 0 0"
                                              Foreground="#666666"/>
                                        <TextBlock Text="{Binding Description}"
                                              Margin="0 10 0 0"
                                              TextWrapping="Wrap"
                                              MaxWidth="500"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" 
                                           
                                           VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Price}"
                                              FontSize="24"
                                              FontWeight="Bold"
                                              Foreground="#778DA9"/>
                                        <TextBlock Text="руб/мес"
                                              Margin="0 5 0 0"/>
                                        <Button Content="Подробнее"
                                           Margin="0 15 0 0"
                                           Padding="20 10"
                                           Background="#778DA9"
                                           Foreground="White"
                                           Click="Button_Click_1"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

           
            <StackPanel Grid.Row="3" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Добавить офис"
                   Padding="20 10"
                   Background="#1B263B"
                   Foreground="White"
                   FontWeight="Bold"
                   Click="Button_Click"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
