<Page x:Class="Ofiso.View.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ofiso.View.Pages"
      MinWidth="960" MaxWidth="960" MinHeight="560" MaxHeight="560"
      Title="Личный кабинет"
      FontFamily="Segoe UI">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#778DA9"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15 8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" Opacity="0.2" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="12" 
                          Opacity="0.1" 
                          ShadowDepth="4"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Профиль пользователя -->
        <Border Background="White"
                CornerRadius="8"
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Effect="{StaticResource CardShadow}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Аватар -->
                <Border Width="80" 
                        Height="80" 
                        CornerRadius="40"
                        Background="#778DA9"
                        VerticalAlignment="Top">
                    <TextBlock Text="{Binding Fname}"
                               Foreground="White"
                               FontSize="10"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Информация -->
                <StackPanel Grid.Column="1" Margin="20 0 0 0">
                    <TextBlock Text="{Binding Fname}" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#1B263B"/>

                    <Grid Margin="0 15 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Телефон:" Foreground="#666"/>
                            <TextBlock Text="Email:" Foreground="#666" Margin="0 8 0 0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding NumberPhone}" Foreground="#444"/>
                            <TextBlock Text="{Binding Email}" Foreground="#444" Margin="0 8 0 0"/>
                        </StackPanel>
                    </Grid>

                    <Button Content="Сменить пароль" 
                            Margin="0 20 0 0"
                            Click="ChangePass_Click"
                            Width="200"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Список офисов -->
        <ScrollViewer Grid.Row="1" 
                      Margin="0 20 0 0" 
                      VerticalScrollBarVisibility="Auto">

            <ItemsControl x:Name="OfficesList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                Margin="0 0 0 15"
                                Padding="20"
                                CornerRadius="8"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Effect="{StaticResource CardShadow}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Изображение -->
                                <Border CornerRadius="4"
                                        Background="#EEE">
                                    <Image Source="{Binding Photo}"
                                           Stretch="UniformToFill"
                                           Height="150"/>
                                </Border>

                                <!-- Информация -->
                                <StackPanel Grid.Column="1" Margin="20 0">
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="18"
                                               FontWeight="Bold"/>

                                    <StackPanel Margin="0 10 0 0">
                                        <TextBlock Text="{Binding Address}"
                                                   Foreground="#666"/>
                                        <TextBlock Text="{Binding Floor, StringFormat='Этаж: {0}'}"
                                                   Foreground="#666"
                                                   Margin="0 5 0 0"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding Description}"
                                               Margin="0 15 0 0"
                                               Foreground="#444"
                                               TextWrapping="Wrap"
                                               MaxWidth="500"/>
                                </StackPanel>

                                <!-- Цена -->
                                <StackPanel Grid.Column="2" 
                                            VerticalAlignment="Center"
                                            Margin="20 0 0 0">
                                    <TextBlock Text="{Binding PricePerMont, StringFormat='{}₽{0:N0}'}"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Foreground="#778DA9"/>
                                    <TextBlock Text="в месяц"
                                               Foreground="#666"
                                               Margin="0 5 0 0"/>

                                    <Button Content="Управление"
                                            Margin="0 15 0 0"
                                            Padding="20 10"
                                            Click="Button_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>